generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            Int       @id @default(autoincrement())
  name          String
  email         String    @unique
  password_hash String
  addresses     Address[]
}

model Address {
  id           Int     @id @default(autoincrement())
  type         String
  zip_code     String
  state        String
  city         String
  neighborhood String
  street       String
  number       String
  complement   String?
  user         User?   @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId       Int?
}
